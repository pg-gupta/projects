<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchFriend">

    <EditText
        android:id="@+id/searchTxt"
        android:layout_width="358dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Type skill"
        android:inputType="textPersonName"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="#0081cb"
        android:textColorHint="#0081cb"
        android:textStyle="italic" />

    <ImageButton
        android:id="@+id/searchBtn"
        android:layout_width="59dp"
        android:layout_height="28dp"
        android:layout_alignEnd="@+id/searchTxt"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:background="@color/fui_transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/search" />

    <ListView
        android:id="@+id/friendList"
        android:layout_width="354dp"
        android:layout_height="415dp"
        android:layout_alignLeft="@+id/searchTxt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/searchTxt"
        android:layout_marginEnd="10dp" />


</RelativeLayout>